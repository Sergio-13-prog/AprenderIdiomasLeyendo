<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.AprenderIdiomas1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/darker_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background color -->
        <item name="android:colorBackground">@color/black</item>
        <!-- Text color -->
        <item name="android:textColor">@color/white</item>
        <!-- Accent color -->
        <item name="colorAccent">@color/dark_blue</item>
    </style>

    <!-- Estilo para el AlertDialog -->
    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/darker_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
