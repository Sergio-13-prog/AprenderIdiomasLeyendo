<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="?attr/actionBarSize"> <!-- Espacio para el tÃ­tulo -->

    <TextView
        android:id="@+id/tvSuggestedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Texto sugerido"
        android:padding="16dp"
        android:textSize="18sp"
        android:lineSpacingExtra="4dp" />

    <TextView
        android:id="@+id/tvLanguagesInSuggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Idiomas seleccionados: "
        android:textSize="16sp"
        android:layout_marginTop="16dp" />
    <Button
        android:id="@+id/btnSavedWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver palabras guardadas"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />


</LinearLayout>
