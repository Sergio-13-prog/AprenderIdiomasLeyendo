<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="?attr/actionBarSize"> <!-- Espacio para el título -->


    <!-- Título del nivel -->
    <TextView
        android:id="@+id/tvLevelTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nivel A1"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Descripción del nivel -->
    <TextView
        android:id="@+id/tvLevelDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descripción breve del nivel"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLevelTitle"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
